<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
<!-- 1 -->
      <% data.forEach(item => { %>
    <div class="slide-item">
        <h3><%= item.title %> - <%= item.page %></h3>
        <p>Subtitle: <%= item.subtitle %></p>

        <% if (item.image) { %>
        <img src="https://admin.foodstek.com/upload/slider/<%= item.image %>" alt="<%= item.title %>" width="200">
        <% } %>

        <% if (item.image2) { %>
        <img src="https://admin.foodstek.com/upload/slider/<%= item.image2 %>" alt="<%= item.title %>" width="200">
        <% } %>

        <% if (item.image3) { %>
        <img src="https://admin.foodstek.com/upload/slider/<%= item.image3 %>" alt="<%= item.title %>" width="200">
      <% } %>
    </div>
    <% }); %>
<!-- 2 -->
<img src="https://admin.foodstek.com/upload/slider/<%= data[0].image %>" alt="Image 1" width="200">
<img src="https://admin.foodstek.com/upload/slider/<%= data[0].image2 %>" alt="Image 2" width="200">
<img src="https://admin.foodstek.com/upload/slider/<%= data[0].image3 %>" alt="Image 3" width="200">
